<p class="p1"><span class="s1">let currentQuiz = [];</span></p>
<p class="p1"><span class="s1">let answers = {};</span></p>
<p class="p1"><span class="s1">let timerInterval;</span></p>
<p class="p1"><span class="s1">let timeLeft;</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1">function shuffle(arr) {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>for (let i = arr.length - 1; i &gt; 0; i--) {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>const j = Math.floor(Math.random() * (i + 1));</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>[arr[i], arr[j]] = [arr[j], arr[i]];</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>}</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>return arr;</span></p>
<p class="p1"><span class="s1">}</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1">function startQuiz() {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>const numQ = parseInt($('#numQuestions').value);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>const limit = parseInt($('#timeLimit').value) * 60;</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>const selectedTopics = [...$$('.topic:checked')].map(c =&gt; c.value);</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>let pool = [];</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>selectedTopics.forEach(topic =&gt; {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>if (questions[topic]) pool = pool.concat(questions[topic]);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>});</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>if (pool.length === 0) { alert("Please select at least one topic."); return; }</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>if (pool.length &lt; numQ) { alert(`Not enough questions for the selected topics! Please select more topics or fewer questions. Available: ${pool.length}`); return; }</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>currentQuiz = shuffle(pool).slice(0, numQ);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>answers = {};</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>$('#quiz').innerHTML = '';</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>$('#result').innerHTML = '';</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>$('#submitBtn').classList.remove('hidden');</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>$('.settings-form').classList.add('hidden');</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>$('#progress-container').classList.remove('hidden');</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>currentQuiz.forEach((q, i) =&gt; {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>const qDiv = document.createElement('div');</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>qDiv.className = 'question';</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>qDiv.innerHTML = `&lt;h3&gt;Q${i+1}. ${q.q}&lt;/h3&gt;`;</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>const optsDiv = document.createElement('div');</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>optsDiv.className = 'options';</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>shuffle(q.options).forEach(opt =&gt; {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  </span>const btn = document.createElement('button');</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  </span>btn.textContent = opt;</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  </span>btn.onclick = () =&gt; {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>if (answers[i] !== undefined) return; // Lock answer</span></p>
<p class="p2"><span class="s1"><span class="Apple-converted-space">Â Â  Â  Â  Â </span></span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>answers[i] = opt;</span></p>
<p class="p2"><span class="s1"><span class="Apple-converted-space">Â Â  Â  Â  Â </span></span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>optsDiv.querySelectorAll('button').forEach(b =&gt; {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  </span>if (b.textContent === q.answer) {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  Â  </span>b.classList.add('correct');</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  </span>} else if (b.textContent === opt) {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  Â  </span>b.classList.add('wrong');</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  </span>}</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>});</span></p>
<p class="p2"><span class="s1"><span class="Apple-converted-space">Â Â  Â  Â  Â </span></span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>updateProgress();</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>if ($('#autoSubmit').checked &amp;&amp; Object.keys(answers).length === currentQuiz.length) {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  Â  </span>setTimeout(submitQuiz, 500);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>}</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  </span>};</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  </span>optsDiv.appendChild(btn);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>});</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>qDiv.appendChild(optsDiv);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>$('#quiz').appendChild(qDiv);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>});</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>timeLeft = limit;</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>clearInterval(timerInterval);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>if (limit &gt; 0) {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>$('#timer').textContent = formatTime(timeLeft);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>timerInterval = setInterval(() =&gt; {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  </span>timeLeft--;</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  </span>$('#timer').textContent = formatTime(Math.max(0, timeLeft));</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  </span>if (timeLeft &lt;= 0) {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>clearInterval(timerInterval);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  Â  </span>submitQuiz();</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  Â  </span>}</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  Â  </span>}, 1000);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>}</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>updateProgress();</span></p>
<p class="p1"><span class="s1">}</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1">function updateProgress() {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>const percent = (currentQuiz.length &gt; 0) ? (Object.keys(answers).length / currentQuiz.length) * 100 : 0;</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>$('#progress-bar').style.width = percent + '%';</span></p>
<p class="p1"><span class="s1">}</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1">function formatTime(sec) {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>const m = Math.floor(sec / 60);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>const s = sec % 60;</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>return `${m}:${s.toString().padStart(2, '0')}`;</span></p>
<p class="p1"><span class="s1">}</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1">function submitQuiz() {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>clearInterval(timerInterval);</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>$('#submitBtn').classList.add('hidden');</span></p>
<p class="p2"><span class="s1"><span class="Apple-converted-space">Â Â </span></span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>let score = 0;</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>currentQuiz.forEach((q, i) =&gt; { if (answers[i] === q.answer) score++; });</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>const percent = (currentQuiz.length &gt; 0) ? Math.round((score / currentQuiz.length) * 100) : 0;</span></p>
<p class="p2"><span class="s1"><span class="Apple-converted-space">Â Â </span></span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>// Use location.reload() for a simple "Play Again" experience</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>$('#result').innerHTML = `&lt;h2&gt;ðŸŽ¯ You got ${score} / ${currentQuiz.length} (${percent}%)&lt;/h2&gt;&lt;button onclick="location.reload()"&gt;Play Again&lt;/button&gt;`;</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>const history = JSON.parse(localStorage.getItem('quizHistory')) || [];</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>history.unshift({ date: new Date().toLocaleString(), score, total: currentQuiz.length });</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>if (history.length &gt; 10) history.pop();</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>localStorage.setItem('quizHistory', JSON.stringify(history));</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>loadHistory();</span></p>
<p class="p1"><span class="s1">}</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1">function loadHistory() {</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>const history = JSON.parse(localStorage.getItem('quizHistory')) || [];</span></p>
<p class="p1"><span class="s1"><span class="Apple-converted-space">Â  </span>$('#historyList').innerHTML = history.map(h =&gt; `&lt;li&gt;${h.date}: &lt;strong&gt;${h.score}/${h.total}&lt;/strong&gt;&lt;/li&gt;`).join('');</span></p>
<p class="p1"><span class="s1">}</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1">$('#startBtn').onclick = startQuiz;</span></p>
<p class="p1"><span class="s1">$('#submitBtn').onclick = submitQuiz;</span></p>
<p class="p2"><span class="s1"></span><br></p>
<p class="p1"><span class="s1">loadHistory();</span></p>
